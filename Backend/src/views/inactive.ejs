<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
    <title>Inactivos</title>
    <link rel="shortcut icon" href="/img/logo.png" type="image/x-icon">
    <link rel="stylesheet" href="/css/inactive.css">
</head>

<body>
    <!--header.ejs-->
    <%- include('./partials/header.ejs', {
    subtitulo: "Inactivos",
    textoLogout: "Volver",
    logoutHref: "/api/usuarios/admin/dashboard"
    }) %>

    <main class="inactive-main">
        <h2>Productos</h2>
        <section class="inactives-container">

            <% if (productos && productos.length> 0) { %>
                <% productos.forEach(producto=> { %>
                    <div class="card" style="width: 18rem;">
                        <img src="/img/imgProductos/<%= producto.imagen %>" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%=producto.nombre%>
                            </h5>
                            <p class="card-text">
                                <%=producto.descripcion%>
                            </p>
                            <div class="price-cont">
                                <p class="precio-card">
                                    <%=producto.precio%>
                                </p>
                            </div>
                            <form action="/api/productos/admin/<%= producto.id %>?_method=PUT" method="POST"
                                style="display:inline;">
                                <button type="submit"
                                    class="btn btn-sm <%= producto.activo ? 'btn-danger' : 'btn-success' %>">
                                    <%= producto.activo ? 'Desactivar' : 'Activar' %>
                                </button>
                            </form>
                        </div>
                    </div>
                    </div>

                    <% }) %>
                        <% } %>

        </section>
    </main>
</body>

</html>