<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Panel de Administraci√≥n</title>
    <link rel="shortcut icon" href="/img/logo.png" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/inactive.css">
</head>

<body>
    <header class="dashboard-header">
        <div>
            <h1>Tech Store</h1>
            <h5>Inactivos</h3>
                <div>
                    <img src="/img/logo.png" alt="Imagen" style="max-width: 70px; border-radius: 6px;">
                </div>

        </div>
        <div>
            <span>Bienvenido</span>
            <a href="/api/usuarios/admin/dashboard" class="btn-logout">Volver</a>
        </div>
    </header>

    <main class="inactive-main">
        <h2>Productos</h2>
        <section class="inactives-container">

            <% if (productos && productos.length> 0) { %>
                <% productos.forEach(producto=> { %>
                    <div class="card" style="width: 18rem;">
                        <img src=<%=producto.imagen %> class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%=producto.nombre%>
                            </h5>
                            <p class="card-text">
                                <%=producto.descripcion%>
                            </p>
                            <div class="price-cont">
                                <p class="precio-card">
                                    <%=producto.precio%>
                                </p>
                            </div>
                            <a href="#" class="btn">Accion
                            </a>
                        </div>
                    </div>`
                    </div>

                    <% }) %>
                        <% } %>

        </section>
    </main>
</body>

</html>